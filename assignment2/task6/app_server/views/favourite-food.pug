extends layout
include _includes/sharedHTMLfunctions

block content
  h1= title_content
  p Here is my favourite food
  <br/>
  <br/>
  h2= favourite.food
  <br/>
  .row
    .col-sm-6.favourite
      img(src=favourite.image)
    .col-sm-6.fav-reviews 
      .card.card-info.review-card 
          .card-block 
            h2.card-title Customer Reviews
            each review in reviews
              .row.review
                .col-12.no-gutters.review-header  
                  span.rating 
                    +outputRating(review.rating)
                  span.reviewAuthor #{review.author} 
                  small.reviewTimestamp on #{review.timestamp}
                .col-12 
                  p.comments !{(review.reviewText).replace(/\n/g, '<br/>')} 